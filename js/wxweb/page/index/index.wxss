.rename-wrapper .rename-input {
  width: 70%;
  height: 50px;
  color: #74787C;
  line-height: 32rpx;
  font-size: 32rpx;
  padding: 0px 20px;
  background-color: #fff;
  margin: 0 auto;
  border: 1px solid #CBCBCB;
}
.rename-wrapper .rename-op {
  width: 70%;
  height: 32px;
  color: #09bb07;
  font-weight: bold;
  padding: 12px;
}
