.rename-wrapper,
.rename-wrapper .mask {
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
}
.rename-wrapper {
  position: fixed;
  z-index: 1000;
}
.rename-wrapper .mask {
  position: absolute;
