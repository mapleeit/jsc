<!--视频类型s-->
<view class="wy-img-list-wrapper" style="height:{{videoHeight+'px'}}; margin-top: {{videoMargin+'px'}}">
	<view class="video-container" wx:if="{{videoPlay}}" class="" style="display:{{videoPlay?'':'none'}}">
		<video id="mainVideo" controls="true" objectFit="contain" class="video" src="{{videoSrc}}" autoplay="{{true}}" objectFit="contain" style="height:{{videoHeight+'px'}};" binderror="bindVideoError"></video>
	</view>
	<view class="img-item img-item-spec" bindtap="bindThumbTap" wx:if="{{!videoPlay}}">
		<image class="img" mode="aspectFill" src="{{videoCover}}" style="height:{{videoHeight+'px'}};"></image>
		<view class="img-item-attr"><!--视频类型:显示播放图标/相关信息-->
			<view class="icon-media-ctrl">
				<image class="icon" mode="aspectFit" src="../../img/icon-media-play@2x.png"></image>
			</view>
			<text class="time">{{videoTimeDurning}}</text>
		</view>
	</view>
</view>
